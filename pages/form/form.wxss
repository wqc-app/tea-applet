.title{
  margin: 60rpx;
  text-align: center;
  font-size: 60rpx;
}

.box{
  margin: 0 40rpx;
  padding: 20rpx 20rpx;
  font-size: 32rpx;
  box-shadow: 0 5px 14px  rgba(51, 102, 255, 0.24); 
}

.dataRow {
  padding: 20rpx 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count , .nodata{
  text-align: center;
  margin: 30rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.4);
}

.comment{
  display: flex;
  align-items: center;
  height: 60rpx;
}

.commentInput{
  background: rgba(0, 0, 0, 0.1);
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  height: 100%;
  box-sizing: border-box;
  flex: 8;
  margin-right: 10rpx;
  border-radius: 6rpx;
}

.commentBtn {
  height: 100%;
  flex: 2 40rpx;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  line-height: 60rpx;
}